    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="160dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/blanco">
        <Spinner
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/spin_access"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp">
        <Button
            android:id="@+id/btn_new"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ic_button_red"
            android:text="@string/btnNuevoObstaculoText"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ic_button_red"
            android:text="@string/btnConfirmarObstaculoText"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/ic_button_green"
        android:text="@string/btnCrearItinerarioText"
        android:textColor="@color/white"
        android:textSize="20dp" />


</FrameLayout>