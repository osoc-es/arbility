<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/BotonRegistrarColegio"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Registrar Colegio"/>

    <Button
        android:id="@+id/BotonProfesor"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/BotonRegistrarColegio"
        android:layout_marginBottom="25dp"
        android:text="Profesor"/>

    <Button
        android:id="@+id/BotonAlumno"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/BotonProfesor"
        android:layout_marginBottom="25dp"
        android:text="Alumno"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/BotonInvitado"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/BotonAlumno"
        android:layout_marginBottom="25dp"
        android:text="Invitado"
        android:textSize="20dp"/>




</RelativeLayout>
