<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedirSalvaescaleras">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:src="@drawable/ic_cruz"/>

    <TextView
        android:id="@+id/ancho_plat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Anchura plataforma: --" />

    <TextView
        android:id="@+id/largo_plat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Longitud plataforma: --" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="150dp"
        android:background="#8000">
        <ImageView
            android:id="@+id/img_instr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/salvaescaleras_01"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="#fff"
            android:text="@string/instr_salvaescaleras_01"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="restart"
            android:background="@drawable/ic_button_red"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="Next"
            android:background="@drawable/ic_button_green"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>

</FrameLayout>