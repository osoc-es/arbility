<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WidthMeasure">

    <TextView
        android:id="@+id/tv_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/red"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textColor="@color/red"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.4"
        android:src="@drawable/crosshair"
       />
    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_centerVertical="true"
        android:background="@color/red"
        android:alpha ="0.4"
        />
    <View
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/red"
        android:alpha ="0.4"
        />

    <TextView
        android:id="@+id/object_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="height: "
        android:textColor="@color/red"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/object_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="width: "
        android:textColor="@color/red"
        android:textSize="20dp" />



    <EditText
            android:id="@+id/user_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Introduce tu altura"
        />





    <Button
        android:id="@+id/save_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="Save point" />

    <Button
        android:id="@+id/save_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="Save corner" />

    <Button
        android:id="@+id/reset_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Reset roll" />

</RelativeLayout>