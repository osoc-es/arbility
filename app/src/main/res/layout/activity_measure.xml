<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeasureActivity">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:src="@drawable/ic_cruz"/>

    <TextView
        android:id="@+id/width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textColor="#fff"
        android:text="Anchura puerta: --" />

    <TextView
        android:id="@+id/height_mecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        android:textSize="30sp"
        android:textColor="#fff"
        android:text="Altura mecanismo: --" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="125dp"
        android:textSize="30sp"
        android:textColor="#fff"
        android:text="Altura puerta: --" />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="150dp"
        android:textAlignment="center"
        android:background="#8000"
        android:textSize="25sp"
        android:padding="5dp"
        android:textColor="#fff"
        android:text="Haz click en las esquinas inferiores de la puerta tras calibrar"
        />


    <SeekBar
        android:id="@+id/z_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:max="300"
        android:enabled="false"
        android:progress="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="restart"
            android:background="@drawable/ic_button_red"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="Next"
            android:background="@drawable/ic_button_green"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>

</FrameLayout>
