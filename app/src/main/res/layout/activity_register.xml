<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/fondo_login"
    tools:context=".RegisterCentroEscolarActivity">

    <Button
        android:id="@+id/btnValidar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordRepeat"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_button_red"
        android:onClick="validar"
        android:text="@string/btn_Validar"
        android:textColor="@color/blanco"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="@string/tvRegistro"
        android:textColor="@color/red"
        android:textSize="36sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgvFotoPerfil"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tvRegistro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_image_button"
        android:textSize="22sp"
        app:srcCompat="@drawable/ic_user"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/etNombreReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imgvFotoPerfil"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="10dp"
        android:hint="@string/et_NombreReg"
        android:textColorHint="@color/blue"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etNombreReg"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="10dp"
        android:hint="@string/et_Direccion"
        android:textColorHint="@color/blue"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/etCiudadReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etDireccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_dog_tag"
        android:drawablePadding="10dp"
        android:hint="@string/et_CiudadReg"
        android:textColorHint="@color/blue"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmailReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etCiudadReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_send"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/et_EmailReg"
        android:textColorHint="@color/blue"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmailReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_key"
        android:drawablePadding="10dp"
        android:hint="@string/et_PasswordReg"
        android:textColorHint="@color/blue"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />


    <EditText
        android:id="@+id/etPasswordRepeat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etPasswordReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_key"
        android:textColorHint="@color/blue"
        android:drawablePadding="10dp"
        android:hint="@string/et_PasswordRepeat"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordRepeat"
        android:layout_centerVertical="true"
        android:layout_marginTop="92dp"
        android:background="@drawable/ic_button_red"
        android:onClick="registrar"
        android:text="@string/btn_RegistrarUsuario"
        android:textColor="@color/blanco"
        android:textSize="18sp" />


</RelativeLayout>